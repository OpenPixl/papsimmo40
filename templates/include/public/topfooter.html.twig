<section id="top_footer" class="container-fluid">
    <div class="row pt-3 pb-3">
        <div class="col-12 col-md-3 col-lg-3 col-xl-3" id="map">

            <h5>Plan du site</h5>
            <hr>
            <ul>
                <li><a href="{{ path('op_webapp_public_homepage') }}">Accueil</a></li>
                {% for page in pages %}
                    <li><a href="{{ path('op_webapp_page_slug', {'slug':page.slug}) }}">{{ page.name }}</a></li>
                {% endfor %}
            </ul>

        </div>
        <div class="col-12 col-md-6 col-lg-6 col-xl-6" id="form">
            {{ render(controller('App\\Controller\\Admin\\ContactController::new')) }}
        </div>
        <div class="col-12 col-md-3 col-lg-3 col-xl-3" id="info">
            <div class="row">
                <div class="offset-3 col-6">
                    {% if application.logoName %}
                        <img class="img-fluid" src="{{ vich_uploader_asset(application, 'logoFile') }}" alt="{{ application.logoName }}">
                    {% else %}
                        <img class="img-fluid" src="{{ asset('images/png/LogoPAPSimmo.png') }}" alt="{{ application.nameSite }}" height="100px">
                    {% endif %}
                </div>
                <div class="col-3"></div>
            </div>
            <div class="row mb-3">
                <div class="offset-1 col-10">
                    <h5 class="text-center">SAS {{ application.nameSite }}</h5>
                    <p class="text-center">24 Boulevard Marcel DASSAULT <br>64200 BIARRITZ</p>
                    <p class="text-center">contact@papsimmo.fr</p>
                    <p class="text-center"><span class="tel">06 77 31 26 39</span></p>
                </div>
            </div>
            <div class="row mt-3">
                <div class="offset-1 col-10">
                    <p class="text-center text-black">SAS PAPS IMMO au capital de 1 000€ RDC 908 628 936<br>
                       Carte professionnelle N° CP 6401 2022 000 000 004 délivré par la CCI de Bayonne
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>