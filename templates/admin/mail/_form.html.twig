{{ form_start(form) }}
<div class="row">
    <div class="col-12 mb-1">
        {{ form_label(form.content) }}
    </div>
    <div class="col-12">
        {{ form_widget(form.content, {'attr': {'class': 'form-control tinymce'}}) }}
    </div>
</div>

{{ form_rest(form) }}
<div class="row mt-2">
    <div class="col-12">
        <button class="btn btn-sm btn-primary">{{ button_label|default('Envoyer le message au support') }}</button>
    </div>
</div>
{{ form_end(form) }}
