{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}
    <h1>Contact</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ contact.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ contact.name }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ contact.email }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ contact.content }}</td>
            </tr>
            <tr>
                <th>PhoneHome</th>
                <td>{{ contact.phoneHome }}</td>
            </tr>
            <tr>
                <th>PhoneGsm</th>
                <td>{{ contact.phoneGsm }}</td>
            </tr>
            <tr>
                <th>IsRGPD</th>
                <td>{{ contact.isRGPD ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ contact.createdAt ? contact.createdAt|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_admin_contact_index') }}">back to list</a>

    <a href="{{ path('app_admin_contact_edit', {'id': contact.id}) }}">edit</a>

    {{ include('admin/contact/_delete_form.html.twig') }}
{% endblock %}
