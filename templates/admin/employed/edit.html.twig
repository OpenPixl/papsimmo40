{% extends 'admin.html.twig' %}

{% block title %}Edit Employed{% endblock %}

{% block stylesheets%}
    {{ parent() }}
    <link href="https://cdn.jsdelivr.net/npm/tom-select/dist/css/tom-select.css" rel="stylesheet">
{% endblock %}

{% block javascripts%}
    {{ parent() }}
    <script type="module" src="{{ asset('js/Admin/employed/edit.js') }}"></script>
    <script>
        window.onload = function(){

        }
    </script>
{% endblock %}
{% block content %}
    <section class="mb-5">
        <div class="row">
            <div class="col-12">
                <h1>Edition d'un collaborateur</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <input id="idemployed" type="hidden" value="{{employed.id}}">
                {{ include('admin/employed/_form.html.twig', {'button_label': 'Mettre Ã  jour'}) }}
            </div>
        </div>
    </section>
{% endblock %}

{% block modal %}
    {{ parent() }}

    <!-- Modal Account-->
    <div class="modal fade" id="showAccount" tabindex="-1" aria-labelledby="showAccount" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Comptes</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="d-flex justify-content-center">
                        <div class="spinner-border" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">Save changes</button>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
