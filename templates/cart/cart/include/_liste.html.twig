<div class="col-12">
    <table class="table table-sm align-middle">
        <thead>
        <tr>
            <th class="col-1"><input type="checkbox" id="AllCheckBoxes"></th>
            <th colspan="2" class="col-2">Le produit</th>
            <th class="col-2">Prix unitaire</th>
            <th class="col-1">Quantité</th>
            <th class="col-1">total</th>
            <th class="col-1"></th>
        </tr>
        </thead>
        <tbody id="bodyCart">
        {% set total = 0 %}
        {% set totalComm = 0 %}
        {% set qty = 0 %}
        {% for c in carts %}
            {% set total = (c.refProduct.price * c.productQty) %}
            {% set totalComm = totalComm + total %}
            {% set qty = qty + c.productQty %}
            <tr id="rowCart" class="align-middle">
                <td><input type="checkbox" name="oneCheckbox" value="{{ c.item }}-{{ c.refProduct.id }}"></td>
                <td>
                    {# intégration de l'image au sein du panier #}
                    {% if c.refProduct is null %}
                        <img class="rounded" src="#" alt="fond_product">
                    {% else %}
                        <img class="rounded" src="{{ asset('images/product/')~c.refProduct.visualFilename }}" alt="{{ c.productName }}" height="75px">&nbsp;&nbsp;
                    {% endif %}
                </td>
                <td>
                    <a class="text-start" href="{{ path('op_cart_product_show', {'id': c.productid}) }}">{{ c.productName }}</a> - réf : {{ c.refProduct.ref }}
                </td>
                <td>{{ c.refProduct.price }}€</td>
                <td>{{ c.productQty }}</td>
                <td>{{ c.refProduct.price * c.productQty}}€</td>
                <td><a href="{{ path('op_cart_cart_delete', {'item': c.item, 'idProduct': c.refProduct.id}) }}" class="btn btn-sm btn-outline-danger showCart" data-bs-toggle="modal" data-bs-target="#modalCart" data-bs-whatever="DEL-Retirer le produit du panier-{{ c.item }}"><i class="fa-duotone fa-trash-can"></i></a></td>
            </tr>
        {% else %}
            <tr id="rowCart" class="align-middle">
                <td colspan="6">Nous n'avons pas de produits enregistré dans votre panier actuellement.</td>
            </tr>
        {% endfor %}

        </tbody>
        {% if total > 0 %}
        <tfoot>
            <tr>
                <td colspan="4" class="text-end">TOTAL</td>
                <td>{{ qty }}</td>
                <td colspan="2" class="text-start">{{ totalComm }}€</td>
            </tr>
        </tfoot>
        {% endif %}
    </table>
</div>
