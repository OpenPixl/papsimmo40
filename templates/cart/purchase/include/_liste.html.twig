<div class="col-12">
    <table class="table">
        <thead>
        <tr>
            <th class="col-1"><input type="checkbox" name="checkAllBoxes"></th>
            <th class="col-2">Mandataire</th>
            <th class="col-1">Date de com.</th>
            <th class="col-3">Détails</th>
            <th class="col-2">Etat</th>
            <th class="col-2"></th>
            <th class="col-1"></th>
        </tr>
        </thead>
        <tbody>
        {% for purchase in purchases %}
            <tr class="align-middle">
                <td></td>
                <td>{{ purchase.refEmployed }}</td>
                <td>
                    {{ purchase.purchaseAt|format_datetime(locale='fr',pattern="eee dd MMMM yy") }}
                </td>
                <td>
                    {% for pi in purchase.purchaseItems %}
                        <li><b>{{ pi.productName }}</b> | {{ pi.productPrice }}€ x {{ pi.totalItem }} = {{ pi.productPrice * pi.totalItem }}€</li>
                    {% endfor %}
                </td>
                <td>{{ purchase.total }}€ - {{ purchase.totalItem }} produits</td>
                <td>
                    {% if purchase.status == 'PENDING' %}
                        <p class="alert alert-info p-1 mb-0">En attente</p>
                    {% elseif purchase.status == 'other' %}
                    {% endif %}
                </td>
                <td>
                    <a href="{{ path('op_cart_purchase_delete', {'id': purchase.id})}}" class="btn btn-sm btn-outline-dark" data-bs-toggle="modal" data-bs-target="#showCommande" data-bs-whatever="DELL-Supprimer la commande-{{ purchase.id }}">Supprimer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td></td>
                <td colspan="3">Pas de commandes</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>


