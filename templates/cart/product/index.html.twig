{% extends 'admin.html.twig' %}

{% block title %}Product index{% endblock %}

{% block contentTitle %}

{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-12">
            <h1>Support Commerciaux - <small>Liste des produits disponible Ã  la commande</small></h1>
        </div>
    </div>

    <div class="navigation d-flex justify-content-between">
        <div class="mb-1">
            <button id="addNewSupport" class="btn btn-sm btn-outline-primary">Ajouter un nouveau support</button>
            |
            <button class="btn btn-sm btn-outline-dark" id="btnListSupport">voir son panier de commande</button>
            <button class="btn btn-sm btn-outline-dark" id="btnListCommande">voir son historique des commandes</button>
        </div>
    </div>
    
    <div class="row">
        {% for product in products %}
            <div class="col-3">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">{{ product.name }}</h4>
                        <h6 class="card-subtitle">{{ product.category.name }}</h6>
                    </div>
                    <div class="card-header"></div>
                </div>
            </div>
        {% else %}
            <div class="col-2">
                <div class="card">
                    <div class="card-header"></div>
                    <div class="card-body">
                        <p>Pas de supports disponible actuellement.</p>
                    </div>
                    <div class="card-header"></div>
                </div>
            </div>
        {% endfor %}
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Slug</th>
                <th>Descriptif</th>
                <th>Price</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td>{{ product.id }}</td>
                <td></td>
                <td>{{ product.slug }}</td>
                <td>{{ product.descriptif }}</td>
                <td>{{ product.price }}</td>
                <td>
                    <a href="{{ path('op_cart_product_show', {'id': product.id}) }}">show</a>
                    <a href="{{ path('op_cart_product_edit', {'id': product.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('op_cart_product_new') }}">Create new</a>
{% endblock %}
