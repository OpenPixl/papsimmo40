<div class="d-flex justify-content-between w-100">
        <div>
            {% if is_granted('ROLE_SUPER_ADMIN') %}
                <a id="btnSupprProduct" class="btn btn-sm btn-danger" href="{{ path('op_cart_product_delete', {'id': product.id}) }}" data-bs-dismiss="modal"><i class="fa-duotone fa-trash-xmark"></i> Supprimer le support de communication</a>
            {% endif %}
        </div>
        <div>
            {% if app.session.get('cart') is not empty %}
                {% for i in items|filter(i => i.product.id == product.id) %}
                    <div class="btn-group btn-group-sm" role="group" aria-label="Basic example">
                        <a type="button" class="js-increment btn btn-outline-warning" href="{{ path('op_cart_cart_add', {'id': product.id})~ '?showproduct="true"' }}"><i class="fa-solid fa-plus"></i></a>
                        <button type="button" class="btn btn-outline-warning">&nbsp{{ i.qty }}&nbsp</button>
                        <a type="button" class="js-decrement btn btn-outline-warning" href="{{ path('op_cart_cart_decrement', {'id': product.id}) }}"><i class="fa-solid fa-minus"></i></a>
                    </div>
                {% else %}
                    <a href="{{ path('op_cart_cart_add', {'id': product.id}) ~ '?showproduct="true"' }}" class="btn btn-sm btn-outline-warning"><i class="fa-solid fa-plus"></i> Ajouter au panier</a>
                {% endfor %}
            {% else %}
                <a href="{{ path('op_cart_cart_add', {'id': product.id}) }}" class="btn btn-sm btn-outline-warning"><i class="fa-solid fa-plus"></i> Ajouter au panier</a>
            {% endif %}

            <button type="button" class="btn btn-sm btn-secondary" data-bs-dismiss="modal">Fermer</button>
        </div>
</div>

