{% for product in products %}
    <div class="col-2">
        <div class="card">
            {% if product.visualFilename is not null %}
            <img src="{{ asset('images/product/' ~ product.visualFilename)|imagine_filter('product_card') }}" class="card-img-top" alt="{{ product.ref }}">
            {% else %}
                <img src="{{ asset('images/jpeg/support_visuel.jpeg') }}" class="card-img-top" alt="{{ product.ref }}">
            {% endif %}
            <div class="card-body">
                <h4 class="card-title">{{ product.name }}</h4>
                <h6 class="card-subtitle">{{ product.category.name }}</h6>
            </div>
            {% if is_granted('ROLE_SUPER_ADMIN') %}
            <div class="card-footer">
                <div class="d-flex justify-content-between">
                    <div>
                        <a href="{{ path('op_cart_product_edit', {'id': product.id}) }}" class="btn btn-sm btn-outline-info" data-bs-toggle="modal" data-bs-target="#modalSupport" data-bs-crud="EDIT-Modifier le support">Modifier</a>
                    </div>
                    <div>
                        <a href="{{ path('op_cart_product_show', {'id': product.id}) }}" class="btn btn-sm btn-outline-warning" data-bs-toggle="modal" data-bs-target="#modalSupport" data-bs-crud="SHOW-Détails du support commercial-{{ product.id }}">Voir les détails</a>
                    </div>
                </div>
            </div>
            {% endif %}
        </div>
    </div>
{% else %}
    <div class="col-2">
        <div class="card">
            <div class="card-header"></div>
            <div class="card-body">
                <p>Pas de supports disponible actuellement.</p>
            </div>
            <div class="card-header"></div>
        </div>
    </div>
{% endfor %}