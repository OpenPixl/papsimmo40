{% for product in products %}
    <div class="col-2">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">{{ product.name }}</h4>
                <h6 class="card-subtitle">{{ product.category.name }}</h6>
            </div>
            <div class="card-footer">
                <div class="d-flex justify-content-between">
                    <div><a href="{{ path('op_cart_product_edit', {'id': product.id}) }}" class="btn btn-sm btn-outline-info" data-bs-toggle="modal" data-bs-target="#modalSupport" data-bs-crud="EDIT-Modifier le support">Modifier</a></div>
                    <div><a href="{{ path('op_cart_cart_add', {'id': product.id}) }}" class="btn btn-sm btn-outline-warning"><i class="fa-solid fa-plus"></i> Commander</a></div>
                </div>
            </div>
        </div>
    </div>
{% else %}
    <div class="col-2">
        <div class="card">
            <div class="card-header"></div>
            <div class="card-body">
                <p>Pas de supports disponible actuellement.</p>
            </div>
            <div class="card-header"></div>
        </div>
    </div>
{% endfor %}