{% extends 'admin.html.twig' %}

{% block title %}Product{% endblock %}

{% block content %}
    <h1>Product</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ product.slug }}</td>
            </tr>
            <tr>
                <th>Descriptif</th>
                <td>{{ product.descriptif }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ product.price }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('op_cart_product_index') }}">back to list</a>

    <a href="{{ path('op_cart_product_edit', {'id': product.id}) }}">edit</a>

    {{ include('cart/product/_delete_form.html.twig') }}
{% endblock %}
