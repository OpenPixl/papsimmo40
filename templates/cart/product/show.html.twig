<div class="row align-items-center">
    <div class="col-6">
        <h6>{{ product.name }}</h6>
        <p>{{ product.descriptif|raw }}</p>
        <p><b>Prix : </b>{{ product.price }}â‚¬</p>
    </div>
    <div class="col-6">
        {% if product.visualFilename is not null %}
            <img class="img-fluid" src="{{ asset('images/product/'~ product.visualFilename) }}" alt="{{ product.visualFilename }}" aria-description="{{ product.descriptif }}">
        {% else %}
            <img src="{{ asset('images/jpeg/support_visuel.jpeg') }}" class="img-fluid" alt="{{ product.visualFilename }}" aria-description="{{ product.descriptif }}"">
        {% endif %}
    </div>
</div>
