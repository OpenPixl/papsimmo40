{% extends 'admin.html.twig' %}

{% block title %}Publication{% endblock %}

{% block content %}
    <h1>Publication</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ publication.id }}</td>
            </tr>
            <tr>
                <th>IsWebpublish</th>
                <td>{{ publication.isWebpublish ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>IsSocialNetwork</th>
                <td>{{ publication.isSocialNetwork ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Sector</th>
                <td>{{ publication.sector }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('op_gestapp_publication_index') }}">back to list</a>

    <a href="{{ path('op_gestapp_publication_edit', {'id': publication.id}) }}">edit</a>

    {{ include('gestapp/publication/_delete_form.html.twig') }}
{% endblock %}
