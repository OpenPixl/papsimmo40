{% extends 'admin.html.twig' %}

{% block title %}Customer{% endblock %}

{% block content %}
    <h1>Customer</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ customer.id }}</td>
            </tr>
            <tr>
                <th>Référence</th>
                <td>{{ customer.RefCustomer }}</td>
            </tr>
            <tr>
                <th>Nom & prénom</th>
                <td>{{ customer.lastName }} {{ customer.firstName }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ customer.adress }}<br>{{ customer.complement }}<br>{{ customer.zipcode }} {{ customer.city }}</td>
            </tr>
            <tr>
                <th>IsArchived</th>
                <td>{{ customer.isArchived ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('op_gestapp_customer_index') }}">Retour sur la liste des clients</a>

    <a href="{{ path('op_gestapp_customer_edit', {'id': customer.id}) }}">Modification de la fiche</a>

    {{ include('gestapp/customer/_delete_form.html.twig') }}
{% endblock %}
