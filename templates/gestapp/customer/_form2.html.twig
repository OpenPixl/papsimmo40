<div class="card">
    <div class="card-body bg-light">
        {{ form_start(form, {'attr': {'id': 'FormEditCustomer'}}) }}
        <div class="row">
            <div class="col-12">
                <div class="row">
                    <div class="col-sm-12">
                        <h6>Informations du client</h6>
                        {# Ligne du Nom et prénom du client #}
                        <div class="row mb-1 mt-1 g-1">
                            {{ form_errors(form.firstName) }}
                            {{ form_label(form.firstName, '', {'label_attr': {'class':'col-sm-2  form-label'}}) }}
                            <div class="col-3">
                                {{ form_errors(form.firstName) }}
                                {{ form_widget(form.firstName, {'attr': {'class': 'form-control form-control-sm', 'placeholder':'Prénom'}}) }}
                            </div>
                            <div class="col-3">
                                {{ form_errors(form.lastName) }}
                                {{ form_widget(form.lastName, {'attr': {'class': 'form-control form-control-sm', 'placeholder':'Nom'}}) }}
                            </div>
                        </div>
                        {# Ligne de la date de naissance #}
                        <div class="row mb-1 g-1">
                            {{ form_errors(form.ddn) }}
                            {{ form_label(form.ddn, '', {'label_attr': {'class':'col-sm-2  form-label'}}) }}
                            <div class="col-2">
                                {{ form_errors(form.ddn) }}
                                {{ form_widget(form.ddn, {'attr': {'class': 'form-control form-control-sm', 'placeholder':'Date de naissance'}}) }}
                            </div>
                            <div class="col-4">
                                {{ form_errors(form.ddnIn) }}
                                {{ form_widget(form.ddnIn, {'attr': {'class': 'form-control form-control-sm', 'placeholder':'Lieu de naissance'}}) }}
                            </div>
                        </div>
                        {# Ligne du adresse #}
                        <div class="row mb-1 g-1">
                            {{ form_errors(form.adress) }}
                            {{ form_label(form.adress, '', {'label_attr': {'class':'col-sm-2  form-label'}}) }}
                            <div class="col-3">
                                {{ form_errors(form.adress) }}
                                {{ form_widget(form.adress, {'attr': {'class': 'form-control form-control-sm', 'placeholder':'Rue, voie, ...'}}) }}
                            </div>
                        </div>
                        {# Ligne du adresse #}
                        <div class="row mb-1 g-1">
                            {{ form_errors(form.complement) }}
                            {{ form_label(form.complement, '', {'label_attr': {'class':'col-sm-2  form-label'}}) }}
                            <div class="col-3">
                                {{ form_errors(form.complement) }}
                                {{ form_widget(form.complement, {'attr': {'class': 'form-control form-control-sm', 'placeholder':'Bat, Résidence, Appartement'}}) }}
                            </div>
                        </div>
                        {# Ligne de la date de naissance #}
                        <div class="row mb-1 g-1">
                            {{ form_errors(form.city) }}
                            {{ form_label(form.zipcode, '', {'label_attr': {'class':'col-sm-2  form-label'}}) }}
                            <div class="col-2">
                                {{ form_errors(form.zipcode) }}
                                {{ form_widget(form.zipcode, {'attr': {'class': 'form-control form-control-sm', 'placeholder':'CP'}}) }}
                            </div>
                            <div class="col-4">
                                {{ form_errors(form.city) }}
                                {{ form_widget(form.city, {'attr': {'class': 'form-control form-control-sm', 'placeholder':'Commune'}}) }}
                            </div>
                        </div>
                    </div>

                </div>

                <div class="row">
                    <div class="col-sm-12">
                        <hr>
                        <h6>Coordonnées téléphonique</h6>
                        {# Numéro Domicile #}
                        <div class="row mb-1 mt-1 g-1">
                            <div class="col-sm-2">
                                <div class="input-group">
                                    <span class="input-group-text" id="basic-addon1"><i class="fa-duotone fa-phone-plus"></i></span>
                                    {{ form_widget(form.home, {'attr': {'class': 'form-control form-control-sm'}}) }}
                                </div>
                            </div>
                            <div class="col-sm-2">
                                <div class="input-group">
                                    <span class="input-group-text" id="basic-addon1"><i class="fa-duotone fa-phone-office"></i></span>
                                    {{ form_widget(form.desk, {'attr': {'class': 'form-control form-control-sm'}}) }}
                                </div>
                            </div>
                            <div class="col-sm-2">
                                <div class="input-group">
                                    <span class="input-group-text" id="basic-addon1"><i class="fa-duotone fa-mobile"></i></span>
                                    {{ form_widget(form.gsm, {'attr': {'class': 'form-control form-control-sm'}}) }}
                                </div>
                            </div>
                        </div>
                        <h6>Autres</h6>
                        <div class="row mb-1 mt-1 g-1">
                            <div class="col-sm-4">
                                <div class="input-group">
                                    <span class="input-group-text" id="basic-addon1"><i class="fa-duotone fa-envelope-circle-check"></i></span>
                                    {{ form_widget(form.otherEmail, {'attr': {'class': 'form-control form-control-sm'}}) }}
                                </div>
                            </div>
                            <div class="col-sm-2">
                                <div class="input-group">
                                    <span class="input-group-text" id="basic-addon1"><i class="fa-duotone fa-phone-plus"></i></span>
                                    {{ form_widget(form.fax, {'attr': {'class': 'form-control form-control-sm'}}) }}
                                </div>
                            </div>
                        </div>
                        <hr>
                        <h6>Liens vers les réseaux</h6>
                        <div class="row mb-1 mt-1 g-1">
                            <div class="col-sm-4 ">
                                <div class="input-group">
                                    <span class="input-group-text" id="basic-addon1"><i class="fa-brands fa-facebook"></i></span>
                                    {{ form_widget(form.facebook, {'attr': {'class': 'form-control form-control-sm'}}) }}
                                </div>
                            </div>
                            <div class="col-sm-4">
                                <div class="input-group">
                                    <span class="input-group-text" id="basic-addon1"><i class="fa-brands fa-instagram"></i></span>
                                    {{ form_widget(form.instagram, {'attr': {'class': 'form-control form-control-sm'}}) }}
                                </div>
                            </div>
                            <div class="col-sm-4">
                                <div class="input-group">
                                    <span class="input-group-text" id="basic-addon1"><i class="fa-brands fa-linkedin"></i></span>
                                    {{ form_widget(form.linkedin, {'attr': {'class': 'form-control form-control-sm'}}) }}
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
        {{ form_end(form) }}
    </div>
</div>
<div class="mt-3">
    <a class="btn btn-sm btn-outline-dark" href="{{ path('op_gestapp_customer_index') }}">
        <i class="fa-solid fa-backward-step"></i> Retour à la liste de clients
    </a>
    <button type="submit" class="btn btn-sm btn-outline-primary">{{ button_label|default("Créer la fiche du client") }}</button>
</div>