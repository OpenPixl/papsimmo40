{{ form_start(form, {'attr': {'id': 'FormEditCustomer'}}) }}
<div class="row">
    <div class="col-12">
        <div class="row">
            <div class="col-sm-12">
            {% include('include/form/input2field.html.twig') with {
                'form_label':form_label(form.firstName, 'Nom et Prénom', {'label_attr': {'class':'col-sm-4 col-form-label'}}),
                'form_input1':form_widget(form.lastName, {'attr': {'class': 'form-control form-control-sm', 'placeholder':'Nom'}}),
                'form_input2':form_widget(form.firstName, {'attr': {'class': 'form-control form-control-sm', 'placeholder':'Prénom'}})
            }
            %}
            </div>
            {# Nombre de terrasses #}
            <div class="row mb-1 g-1">
                {{ form_label(form.ddn, '', {'label_attr': {'class':'col-sm-4  form-label'}}) }}
                <div class="col-4">
                    {{ form_widget(form.ddn, {'attr': {'class': 'form-control form-control-sm'}}) }}
                </div>
                <div class="col-4">
                    {{ form_widget(form.ddnIn, {'attr': {'class': 'form-control form-control-sm'}}) }}
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-sm-12">
                {% include('include/form/input.html.twig') with {
                    'form_label':form_label(form.adress, '', {'label_attr': {'class':'col-sm-4 col-form-label'}}),
                    'form_input':form_widget(form.adress, {'attr': {'class': 'form-control form-control-sm', 'placeholder':'Adresse'}})
                }
                %}

                {% include('include/form/input-nolabel.html.twig') with {
                    'form_input':form_widget(form.complement, {'attr': {'class': 'form-control form-control-sm', 'placeholder':'Complément'}}),
                    'class': 'col-sm-4'
                }
                %}

                {% include('include/form/input2field.html.twig') with {
                    'form_label':form_label(form.city, '', {'label_attr': {'class':'col-sm-4 col-form-label'}}),
                    'form_input1':form_widget(form.zipcode, {'attr': {'class': 'form-control form-control-sm', 'placeholder':'CP'}}),
                    'form_input2':form_widget(form.city, {'attr': {'class': 'form-control form-control-sm', 'placeholder':'Commune'}})
                }
                %}
                <hr>
                <h6>Coordonnées téléphonique</h6>
                {# Numéro Domicile #}
                <div class="row mb-1 mt-1 g-1">
                    <div class="col-sm-4">
                        <div class="input-group">
                            <span class="input-group-text" id="basic-addon1"><i class="fa-duotone fa-phone-plus"></i></span>
                            {{ form_widget(form.home, {'attr': {'class': 'form-control form-control-sm'}}) }}
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div class="input-group">
                            <span class="input-group-text" id="basic-addon1"><i class="fa-duotone fa-phone-office"></i></span>
                            {{ form_widget(form.desk, {'attr': {'class': 'form-control form-control-sm'}}) }}
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div class="input-group">
                            <span class="input-group-text" id="basic-addon1"><i class="fa-duotone fa-mobile"></i></span>
                            {{ form_widget(form.gsm, {'attr': {'class': 'form-control form-control-sm'}}) }}
                        </div>
                    </div>
                </div>
                <h6>Autres</h6>
                <div class="row mb-1 mt-1 g-1">
                    <div class="col-sm-8">
                        <div class="input-group">
                            <span class="input-group-text" id="basic-addon1"><i class="fa-duotone fa-envelope-circle-check"></i></span>
                            {{ form_widget(form.otherEmail, {'attr': {'class': 'form-control form-control-sm'}}) }}
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div class="input-group">
                            <span class="input-group-text" id="basic-addon1"><i class="fa-duotone fa-phone-plus"></i></span>
                            {{ form_widget(form.fax, {'attr': {'class': 'form-control form-control-sm'}}) }}
                        </div>
                    </div>
                </div>
                <hr>
                <h6>Liens vers les réseaux</h6>
                <div class="row mb-1 mt-1 g-1">
                    <div class="col-sm-8 offset-4">
                        <div class="input-group">
                            <span class="input-group-text" id="basic-addon1"><i class="fa-brands fa-facebook"></i></span>
                            {{ form_widget(form.facebook, {'attr': {'class': 'form-control form-control-sm'}}) }}
                        </div>
                    </div>
                    <div class="col-sm-8 offset-4">
                        <div class="input-group">
                            <span class="input-group-text" id="basic-addon1"><i class="fa-brands fa-instagram"></i></span>
                            {{ form_widget(form.instagram, {'attr': {'class': 'form-control form-control-sm'}}) }}
                        </div>
                    </div>
                    <div class="col-sm-8 offset-4">
                        <div class="input-group">
                            <span class="input-group-text" id="basic-addon1"><i class="fa-brands fa-linkedin"></i></span>
                            {{ form_widget(form.linkedin, {'attr': {'class': 'form-control form-control-sm'}}) }}
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
{{ form_end(form) }}
