{{ form_start(form) }}
{% if transaction.actePdfFilename is null and transaction.dateAtSale is null%}
    <td>
        <span id="rowEmptyActePdf">-</span>
        <div class="input-group w-100">
            {{ form_widget(form.actePdfFilename, {'attr': {'class':'form-control form-control-sm d-none'}}) }}
            <button class="btn btn-sm btn-secondary d-none" type="button" id="btnAddActePdf"><i class="fa-light fa-check"></i></button>
        </div>
    </td>
{% elseif transaction.actePdfFilename is null and transaction.dateAtSale is not null %}
    <td>
        <div class="input-group w-100">
            {{ form_widget(form.actePdfFilename, {'attr': {'class':'form-control form-control-sm'}}) }}
            <button class="btn btn-sm btn-secondary" type="button" id="btnAddActePdf"><i class="fa-light fa-check"></i></button>
        </div>
    </td>
{% elseif transaction.actePdfFilename is not null and transaction.dateAtSale is not null %}
    <td>
        <div class="input-group w-100">
            {{ form_widget(form.actePdfFilename, {'attr': {'class':'form-control form-control-sm'}}) }}
            <button class="btn btn-sm btn-secondary" type="button" id="btnAddActePdf"><i class="fa-light fa-check"></i></button>
        </div>
    </td>
    <td colspan="2">
        <button id="showPromise" type="button" class="btn btn-sm btn-light" data-bs-toggle="modal" data-bs-target="#modalActe"><i class="fa-duotone fa-eye"></i> Voir le document</button>
        <!-- Modal -->
        <div class="modal fade" id="modalActe" tabindex="-1" aria-labelledby="modalActe" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered modal-xl">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Promesse de vente</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body" style="padding: 0;">
                        <div id="externaFile">
                            <iframe src="{{ asset('doc/transaction/acte/' ~ transaction.actePdfFilename) }}" width="100%" height="500px"></iframe>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-sm btn-secondary" data-bs-dismiss="modal">Fermer</button>
                    </div>
                </div>
            </div>
        </div>
    </td>
{% endif %}
{{ form_end(form) }}