{% extends 'admin.html.twig' %}

{% block title %}Transaction index{% endblock %}

{% block content %}
    <h1>TRANSACTIONS - Ventes</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Numéro de transaction</th>
                <th>Etat</th>
                <th>Crée le</th>
                <th>Mis à jour le</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for transaction in transactions %}
            <tr>
                <td>{{ transaction.id }}</td>
                <td>{{ transaction.state }}</td>
                <td>{{ transaction.createdAt ? transaction.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ transaction.updatedAt ? transaction.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_gestapp_transaction_show', {'id': transaction.id}) }}">Voit</a>
                    <a href="{{ path('app_gestapp_transaction_edit', {'id': transaction.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
