<h4><i class="fa-duotone fa-file-signature"></i> Documents</h4>
<div class="row">
    {% for document in documents %}
    <div class="col-1">
        <div class="card">
            <div class="card-body">
                {% if document.typeDoc == 'Pdf' %}
                <img src="" alt="">
                {% elseif document.typeDoc == 'Word' %}
                <img src="" alt="">
                {% elseif document.typeDoc == 'Excel' %}
                <img src="" alt="">
                {% elseif document.typeDoc == 'Mp4' %}
                <img src="" alt="">
                {% endif %}
                {{ document.name }}
            </div>
        </div>
    </div>
    {% else %}
    <div class="col-1">
        <div class="card">
            <div class="card-body">
                Pas de documents
            </div>
        </div>
    </div>
    {% endfor %}
</div>
<table class="table">
    <thead>
    <tr>
        <th>Id</th>
        <th>Nom</th>
        <th>Category</th>
        <th>TypeDoc</th>
        <th>Lien</th>
        <th>Créer le</th>
        <th>MàJ</th>
        <th>actions</th>
    </tr>
    </thead>
    <tbody>
    {% for document in documents %}
        <tr>
            <td>{{ document.id }}</td>
            <td>{{ document.name }}</td>
            <td>{{ document.category }}</td>
            <td>{{ document.typeDoc }}</td>
            <td>{{ document.pdf }}</td>
            <td>{{ document.createdAt ? document.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            <td>{{ document.updatedAt ? document.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            <td>
                <a href="{{ path('op_gestapp_document_show', {'id': document.id}) }}">Voir</a>
            </td>
        </tr>
    {% else %}
        <tr>
            <td colspan="11">Pas de documents</td>
        </tr>
    {% endfor %}
    </tbody>
</table>