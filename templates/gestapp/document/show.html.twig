{% extends 'base.html.twig' %}

{% block title %}Document{% endblock %}

{% block body %}
    <h1>Document</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ document.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ document.name }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ document.slug }}</td>
            </tr>
            <tr>
                <th>Category</th>
                <td>{{ document.category }}</td>
            </tr>
            <tr>
                <th>TypeDoc</th>
                <td>{{ document.typeDoc }}</td>
            </tr>
            <tr>
                <th>Pdf</th>
                <td>{{ document.pdf }}</td>
            </tr>
            <tr>
                <th>Doc</th>
                <td>{{ document.doc }}</td>
            </tr>
            <tr>
                <th>Sheet</th>
                <td>{{ document.sheet }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ document.createdAt ? document.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ document.updatedAt ? document.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('op_gestapp_document_index') }}">back to list</a>

    <a href="{{ path('op_gestapp_document_edit', {'id': document.id}) }}">edit</a>

    {{ include('gestapp/document/_delete_form.html.twig') }}
{% endblock %}
