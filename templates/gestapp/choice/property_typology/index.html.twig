{% extends 'base.html.twig' %}

{% block title %}PropertyTypology index{% endblock %}

{% block body %}
    <h1>PropertyTypology index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for property_typology in property_typologies %}
            <tr>
                <td>{{ property_typology.id }}</td>
                <td>{{ property_typology.name }}</td>
                <td>
                    <a href="{{ path('app_gestapp_choice_property_typology_show', {'id': property_typology.id}) }}">show</a>
                    <a href="{{ path('app_gestapp_choice_property_typology_edit', {'id': property_typology.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_gestapp_choice_property_typology_new') }}">Create new</a>
{% endblock %}
