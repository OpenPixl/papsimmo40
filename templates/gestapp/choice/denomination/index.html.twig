{% extends 'base.html.twig' %}

{% block title %}Denomination index{% endblock %}

{% block body %}
    <h1>Denomination index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for denomination in denominations %}
            <tr>
                <td>{{ denomination.id }}</td>
                <td>{{ denomination.name }}</td>
                <td>
                    <a href="{{ path('app_gestapp_choice_denomination_show', {'id': denomination.id}) }}">show</a>
                    <a href="{{ path('app_gestapp_choice_denomination_edit', {'id': denomination.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_gestapp_choice_denomination_new') }}">Create new</a>
{% endblock %}
