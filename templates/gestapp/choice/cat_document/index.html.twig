{% extends 'base.html.twig' %}

{% block title %}CatDocument index{% endblock %}

{% block body %}
    <h1>CatDocument index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for cat_document in cat_documents %}
            <tr>
                <td>{{ cat_document.id }}</td>
                <td>{{ cat_document.name }}</td>
                <td>
                    <a href="{{ path('app_gestapp_choice_cat_document_show', {'id': cat_document.id}) }}">show</a>
                    <a href="{{ path('app_gestapp_choice_cat_document_edit', {'id': cat_document.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_gestapp_choice_cat_document_new') }}">Create new</a>
{% endblock %}
