<section class="mt-3">
    <h3>Les photos du bien</h3>
</section>
<section>
    <div class="row">
        <div class="col-3">
            {{ render(controller('App\\Controller\\Gestapp\\PropertyController::Images', {'id': property.id})) }}
            {% if property.qrcodeUrl is not null %}
                <div class="card mt-2">
                    <img src="{{ asset('') }}" class="card-img-top" alt="...">
                    <div class="card-body">
                        <p class="card-text">Qrcode vers l'url de la page Web</p>
                    </div>
                </div>
            {% else %}
                <div class="mt-2">
                    <a id="btnGenQrCode" class="btn btn-sm btn-outline-dark" href="{{ path('op_admin_pdf_qrcodeproperty', {'idproperty': property.id}) }}">Générer le QrCode de la page web</a>
                </div>
            {% endif %}
        </div>
        <div class="col-9">
            <div class="row g-1" id="listephoto">
                {% include('gestapp/photo/_listephoto.html.twig') %}
            </div>
        </div>
    </div>
</section>
<div class="row mt-2">
    <div class="col-12">
        <div class="mt-1">
            {% if property.isIncreating == 1 %}
            <a id="previousGallery" href="{{ path('op_gestapp_property_index') }}" class="btn btn-sm btn-outline-dark"><i class="fa-solid fa-backward-step"></i> Retour</a>
            <button type="submit" id="stepGallery" class="btn btn-sm btn-outline-primary">{{ button_label|default("Valider et passer à l'étape vendeurs") }}</button>
            {% else %}
            <a id="previousGallery" href="{{ path('op_gestapp_property_index') }}" class="btn btn-sm btn-outline-dark"><i class="fa-solid fa-backward-step"></i> Retour</a>
            {% endif %}
        </div>
    </div>
</div>




