{% for photo in photos %}
    {% if loop.first %}
    <div class="col-3">
        <div class="card mb-1">
            <img src="{{ asset('images/galery/') }}{{ photo.galeryFrontName }}" class="card-img-top img-fluid" alt="{{ photo.galeryFrontName }}" style="width: 313px; height: 210px;">
            <div class="card-img-overlay">
                <a class="btn btn-sm btn-light" href="{{ path('op_gestapp_photo_show', {'id': photo.id}) }}"><i class="fa-duotone fa-image-landscape"></i></a>
                <a class="btn btn-sm btn-light delphoto" href="{{ path('app_gestapp_photo_del', {'id': photo.id, 'idproperty': property.id}) }}"><i class="fa-duotone fa-camera-slash"></i></a>
            </div>
            <div class="card-body">
                <p>Image principale - {{ photo.position }}</p>
            </div>
        </div>
    </div>
    {% else %}
    <div class="col-3">
        <div class="card mb-1">
            <img src="{{ asset('images/galery/') }}{{ photo.galeryFrontName }}" class="card-img-top img-fluid" alt="{{ photo.galeryFrontName }}" style="width: 313px; height: 210px;">
            <div class="card-img-overlay">
                <a class="btn btn-sm btn-light" href="{{ path('op_gestapp_photo_show', {'id': photo.id}) }}"><i class="fa-duotone fa-image-landscape"></i></a>
                <a class="btn btn-sm btn-light delphoto" href="{{ path('app_gestapp_photo_del', {'id': photo.id, 'idproperty': property.id}) }}"><i class="fa-duotone fa-camera-slash"></i></a>
            </div>
            <div class="card-body">
                <p>Images secondaires - {{ photo.position }}</p>
            </div>
        </div>
    </div>
    {% endif %}
{% else %}
    <div class="col-3">
        <div class="card">
            <img src="{{ asset('images/png/mod_maison.png') }}" class="card-img-top img-fluid" alt="mod_maison">
            <div class="card-body">
                <p>Pas de photo enregistr√© pour le moment</p>
            </div>
        </div>
    </div>
{% endfor %}