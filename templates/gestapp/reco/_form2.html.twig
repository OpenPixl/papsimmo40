{{ form_start(form) }}
    <div class="row mt-2 mb-2">
        <div class="col-12">

            <div class="row g-1 mb-2">
                {% if app.request.attributes.get('_route') == 'op_gestapp_reco_newonpublic' %}
                    <div class="col-md-6">
                        <div class="card border-dark rounded-1">
                            <div class="card-header">
                                <h5 class="card-title mb-0">Prescripteur</h5>
                            </div>
                            <div class="card-body">
                                <dl class="row mb-0">
                                    <dt class="col-md-4">Nom & prénom</dt>
                                    <dd class="col-md-8"><span class="text-muted">{% if app.user.civility == 1 %}M.{% else%}Mme{% endif%} {{ app.user.firstName }} {{ app.user.lastName }}</span></dd>
                                </dl>
                                <dl class="row mb-0">
                                    <dt class="col-md-4">Email & Téléphone</dt>
                                    <dd class="col-md-8"><span class="text-muted">{{ app.user.email }} | {{ app.user.gsm }}</span></dd>
                                </dl>
                            </div>
                        </div>
                    </div>
                {% else %}
                    <div class="col-md-6">
                    <div class="card border-dark rounded-1">
                        <div class="card-header">
                            <h5 class="card-title mb-0">Prescripteur</h5>
                        </div>
                        <div class="card-body">
                            <div class="row justify-content-between g-1 mb-1">
                                <div class="col-md-4">
                                    {% for label, value, choice in field_choices(form.announceCivility) %}
                                        <div class="form-check form-check-inline">
                                            <input class="form-check-input" type="radio" name="{{ field_name(form.announceCivility) }}" id="inlineRadio1" value="{{ value }}" {% if value is same as reco.announceCivility %}checked="checked"{% endif %}>
                                            <label class="form-check-label" for="inlineRadio1">{{ label }}</label>
                                        </div>
                                    {% endfor %}
                                </div>
                                <div class="col-md-5">
                                    {{ form_widget(form.announceMaiden, {'attr': {'class': 'form-control form-control-sm d-none', 'placeholder': 'Nom de jeune fille...'}}) }}
                                </div>
                            </div>
                            <div class="row g-1 mb-1">
                                <div class="col-6">{{ form_widget(form.announceFirstName, {'attr': {'class': 'form-control form-control-sm', 'placeholder': 'Prénom ...'}}) }}</div>
                                <div class="col-6">{{ form_widget(form.announceLastName, {'attr': {'class': 'form-control form-control-sm', 'placeholder': 'Nom ...'}}) }}</div>
                            </div>
                            <div class="row g-1">
                                <div class="col-8">
                                    {{ form_widget(form.announceEmail, {'attr': {'class': 'form-control form-control-sm border-warning', 'placeholder': 'Email ...'}}) }}
                                </div>
                                <div class="col-4">
                                    {{ form_widget(form.announcePhone, {'attr': {'class': 'form-control form-control-sm border-warning', 'placeholder': 'Mobile/Fixe ...'}}) }}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                {% endif %}
                <div class="col-md-6">
                    <div class="card border-dark rounded-1">
                        <div class="card-header">
                            <h5 class="card-title mb-0">Client</h5>
                        </div>
                        <div class="card-body">
                            <div class="row justify-content-between g-1 mb-1">
                                <div class="col-md-4">
                                    {% for label, value, choice in field_choices(form.customerCivility) %}
                                        <div class="form-check form-check-inline">
                                            <input class="form-check-input" type="radio" name="{{ field_name(form.customerCivility) }}" id="inlineRadio1" value="{{ value }}" {% if value is same as reco.customerCivility %}checked="checked"{% endif %}>
                                            <label class="form-check-label" for="inlineRadio1">{{ label }}</label>
                                        </div>
                                    {% endfor %}
                                </div>
                                <div class="col-md-5">
                                    {{ form_widget(form.customerMaiden, {'attr': {'class': 'form-control form-control-sm d-none', 'placeholder': 'Nom de jeune fille...'}}) }}
                                </div>
                            </div>
                            <div class="row g-1 mb-1">
                                <div class="col-6">{{ form_widget(form.customerFirstName, {'attr': {'class': 'form-control form-control-sm', 'placeholder': 'Prénom ...'}}) }}</div>
                                <div class="col-6">{{ form_widget(form.customerLastName, {'attr': {'class': 'form-control form-control-sm', 'placeholder': 'Nom ...'}}) }}</div>
                            </div>
                            <div class="row g-1">
                                <div class="col-md-8">
                                    {{ form_widget(form.customerEmail, {'attr': {'class': 'form-control form-control-sm  border-warning', 'placeholder': 'Email ...'}}) }}
                                </div>
                                <div class="col-md-4">
                                    {{ form_widget(form.customerPhone, {'attr': {'class': 'form-control form-control-sm  border-warning', 'placeholder': 'Mobile/Fixe ...'}}) }}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="card border-dark rounded-1">
                        <div class="card-header">
                            <h5 class="card-title mb-0">Proposition / Recherche de bien</h5>
                        </div>
                        <div class="card-body">
                            <div class="row g-2">
                                <div class="col-md-4">
                                    <p class="mb-1"><b>Type de recommandation</b></p>
                                    <div class="row g-1">
                                        <div class="col-md-12">
                                            {{ form_widget(form.typeReco, {'attr': {'class': 'form-select form-select-sm'}}) }}
                                        </div>
                                        <div class="col-md-12">
                                            {{ form_widget(form.typeProperty, {'attr': {'class': 'form-select form-select-sm'}}) }}
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-8">
                                    <p class="mb-1"><b>Adresse</b></p>
                                    <div class="row g-1">
                                        <div class="col-md-12">
                                            {{ form_widget(form.propertyAddress, {'attr': {'class': 'form-control form-control-sm'}}) }}
                                        </div>
                                        <div class="col-md-12">
                                            {{ form_widget(form.propertyComplement, {'attr': {'class': 'form-control form-control-sm'}}) }}
                                        </div>
                                        <div class="col-md-4">
                                            {{ form_widget(form.propertyZipcode, {'attr': {'class': 'form-control form-control-sm'}}) }}
                                        </div>
                                        <div class="col-md-8">
                                            {{ form_widget(form.propertyCity, {'attr': {'class': 'form-control form-control-sm w-75'}}) }}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {{ form_widget(form) }}
{{ form_end(form) }}
