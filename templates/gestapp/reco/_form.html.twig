{{ form_start(form) }}
    <div class="row mt-2 mb-2">
        <div class="col-12">
            <div class="row g-1 mb-2">
                <div class="col-9">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="card-title">Avancée de la recommandatation</h5>
                        </div>
                        <div class="card-body pt-1 pb-1">
                            <div class="row align-items-center mt-1 mb-1">
                                <div class="col-4">{{ form_widget(form.statutReco, {'attr': {'class': 'form-select form-select-sm'}}) }}</div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-3">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="card-title">Commission</h5>
                        </div>
                        <div class="card-body pt-1 pb-1">
                            <div class="row align-items-center mt-1 mb-1">
                                {{ form_widget(form.commission, {'attr': {'class': 'form-control form-control-sm'}}) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row g-1">
                <div class="col-6">
                    <div class="card border-dark">
                        <div class="card-header">
                            <h5 class="card-title">Prescripteur</h5>
                        </div>
                        <div class="card-body">
                            <div class="row g-1 mb-1">
                                <div class="col-6">{{ form_widget(form.announceFirstName, {'attr': {'class': 'form-control form-control-sm', 'placeholder': 'Prénom ...'}}) }}</div>
                                <div class="col-6">{{ form_widget(form.announceLastName, {'attr': {'class': 'form-control form-control-sm', 'placeholder': 'Nom ...'}}) }}</div>
                            </div>
                            <div class="row g-1">
                                <div class="col-8">
                                    {{ form_widget(form.announceEmail, {'attr': {'class': 'form-control form-control-sm', 'placeholder': 'Email ...'}}) }}
                                </div>
                                <div class="col-4">
                                    {{ form_widget(form.announcePhone, {'attr': {'class': 'form-control form-control-sm', 'placeholder': 'Mobile/Fixe ...'}}) }}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-6">
                    <div class="card border-dark">
                        <div class="card-header">
                            <h5 class="card-title">Client</h5>
                        </div>
                        <div class="card-body">
                            <div class="row g-1 mb-1">
                                <div class="col-6">{{ form_widget(form.customerFirstName, {'attr': {'class': 'form-control form-control-sm', 'placeholder': 'Prénom ...'}}) }}</div>
                                <div class="col-6">{{ form_widget(form.customerLastName, {'attr': {'class': 'form-control form-control-sm', 'placeholder': 'Nom ...'}}) }}</div>
                            </div>
                            <div class="row g-1">
                                <div class="col-8">
                                    {{ form_widget(form.customerEmail, {'attr': {'class': 'form-control form-control-sm', 'placeholder': 'Email ...'}}) }}
                                </div>
                                <div class="col-4">
                                    {{ form_widget(form.customerPhone, {'attr': {'class': 'form-control form-control-sm', 'placeholder': 'Mobile/Fixe ...'}}) }}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-3 p-2">
            <h4>Prescripteur</h4>
            <div class="row align-items-center h-100">
                <div class="col-12">

                    <div class="row mb-1 g-1">
                        <div class="col-12 mt-2">
                            <p><b>Contacts</b></p>
                        </div>

                    </div>
                </div>
            </div>

        </div>
        <div class="col-6 p-2">
            <h4>Proposition de bien</h4>
            <div class="row align-items-center h-100">
                <div class="col-12">
                    <div class="row mb-1 g-1">
                        <div class="col-6">
                            <p><b>Adresse</b></p>
                        </div>
                        <div class="col-6">
                            <p><b>Commission</b></p>
                        </div>
                        <div class="col-6">
                            {{ form_widget(form.propertyAddress, {'attr': {'class': 'form-control form-control-sm'}}) }}
                        </div>
                        <div class="col-2">
                        </div>
                        <div class="col-6">
                            {{ form_widget(form.propertyComplement, {'attr': {'class': 'form-control form-control-sm'}}) }}
                        </div>
                        <div class="col-6"></div>
                        <div class="col-2">
                            {{ form_widget(form.propertyZipcode, {'attr': {'class': 'form-control form-control-sm'}}) }}
                        </div>
                        <div class="col-4">
                            {{ form_widget(form.propertyCity, {'attr': {'class': 'form-control form-control-sm w-75'}}) }}
                        </div>
                        <div class="col-6"></div>
                        <div class="col-6 mt-2">
                            <p><b>Typologie du bien</b></p>
                        </div>
                        <div class="col-6"></div>
                        <div class="col-3">
                            {{ form_widget(form.typeReco, {'attr': {'class': 'form-select form-select-sm'}}) }}
                        </div>
                        <div class="col-3">
                            {{ form_widget(form.typeProperty, {'attr': {'class': 'form-select form-select-sm'}}) }}
                        </div>
                     </div>
                </div>
            </div>
        </div>

    </div>
    {{ form_widget(form) }}
    <button class="btn">{{ button_label|default('Save') }}</button>
{{ form_end(form) }}
