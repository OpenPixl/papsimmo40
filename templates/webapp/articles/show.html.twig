{% extends 'base.html.twig' %}

{% block title %}Articles{% endblock %}

{% block content %}
    <h1>Articles</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ article.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ article.name }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ article.slug }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ article.content|markdown_to_html }}</td>
            </tr>
            <tr>
                <th>IsShowtitle</th>
                <td>{{ article.isShowtitle ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>IsShowdate</th>
                <td>{{ article.isShowdate ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>IsShowreadmore</th>
                <td>{{ article.isShowreadmore ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>IsLink</th>
                <td>{{ article.isLink ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>LinkText</th>
                <td>{{ article.linkText }}</td>
            </tr>
            <tr>
                <th>State</th>
                <td>{{ article.state }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ article.createdAt ? article.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ article.updatedAt ? article.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('op_webapp_articles_index') }}">back to list</a>

    <a href="{{ path('op_webapp_articles_edit', {'id': article.id}) }}">edit</a>

    {{ include('webapp/articles/_delete_form.html.twig') }}
{% endblock %}
