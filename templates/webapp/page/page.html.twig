{% extends 'base.html.twig' %}

{% block content %}

<section id="page-header" class="container">
    {% if page.isShowtitle == 1 %}
    <div class="row">
        <div class="col-12">
            <h1>{{ page.name }}</h1>
        </div>
    </div>
    {% endif %}
    {% if page.isShowdescription == 1 %}
    <div class="row">
        <div class="col-12">
            <article>{{ page.description|raw }}</article>
        </div>
    </div>
    {% endif %}
</section>
<section id="page-content">

</section>
<section id="page-footer">

</section>

{% endblock %}