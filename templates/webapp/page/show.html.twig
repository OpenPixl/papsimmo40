{% extends 'base.html.twig' %}

{% block title %}Page{% endblock %}

{% block content %}
    <h1>Page</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ page.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ page.name }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ page.slug }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ page.description }}</td>
            </tr>
            <tr>
                <th>IsShowtitle</th>
                <td>{{ page.isShowtitle ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>IsShowdate</th>
                <td>{{ page.isShowdate ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>IsMenu</th>
                <td>{{ page.isMenu ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>State</th>
                <td>{{ page.state }}</td>
            </tr>
            <tr>
                <th>MetaKeywords</th>
                <td>{{ page.metaKeywords ? page.metaKeywords|join(', ') : '' }}</td>
            </tr>
            <tr>
                <th>MetaDescrition</th>
                <td>{{ page.MetaDescrition }}</td>
            </tr>
            <tr>
                <th>Tag</th>
                <td>{{ page.tag ? page.tag|join(', ') : '' }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ page.createdAt ? page.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ page.updatedAt ? page.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('op_webapp_page_index') }}">back to list</a>

    <a href="{{ path('op_webapp_page_edit', {'id': page.id}) }}">edit</a>

    {{ include('webapp/page/_delete_form.html.twig') }}
{% endblock %}
