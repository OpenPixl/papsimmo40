{% extends 'base.html.twig' %}

{% block title %}Section index{% endblock %}

{% block body %}
    <h1>Section index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Slug</th>
                <th>Description</th>
                <th>IsShowtitle</th>
                <th>IsShowdescription</th>
                <th>IsShowdate</th>
                <th>Position</th>
                <th>PositionFavorite</th>
                <th>IsSectionfluid</th>
                <th>BaliseClass</th>
                <th>BaliseId</th>
                <th>BaliseName</th>
                <th>BaliseStyle</th>
                <th>CreatedAt</th>
                <th>UpdatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for section in sections %}
            <tr>
                <td>{{ section.id }}</td>
                <td>{{ section.name }}</td>
                <td>{{ section.slug }}</td>
                <td>{{ section.description }}</td>
                <td>{{ section.isShowtitle ? 'Yes' : 'No' }}</td>
                <td>{{ section.isShowdescription ? 'Yes' : 'No' }}</td>
                <td>{{ section.isShowdate ? 'Yes' : 'No' }}</td>
                <td>{{ section.position }}</td>
                <td>{{ section.positionFavorite }}</td>
                <td>{{ section.isSectionfluid ? 'Yes' : 'No' }}</td>
                <td>{{ section.baliseClass }}</td>
                <td>{{ section.baliseId }}</td>
                <td>{{ section.baliseName }}</td>
                <td>{{ section.baliseStyle }}</td>
                <td>{{ section.createdAt ? section.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ section.updatedAt ? section.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_webapp_section_show', {'id': section.id}) }}">show</a>
                    <a href="{{ path('app_webapp_section_edit', {'id': section.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="17">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_webapp_section_new') }}">Create new</a>
{% endblock %}
