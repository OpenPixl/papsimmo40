{% extends 'base.html.twig' %}

{% block title %}Section{% endblock %}

{% block body %}
    <h1>Section</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ section.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ section.name }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ section.slug }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ section.description }}</td>
            </tr>
            <tr>
                <th>IsShowtitle</th>
                <td>{{ section.isShowtitle ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>IsShowdescription</th>
                <td>{{ section.isShowdescription ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>IsShowdate</th>
                <td>{{ section.isShowdate ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Position</th>
                <td>{{ section.position }}</td>
            </tr>
            <tr>
                <th>PositionFavorite</th>
                <td>{{ section.positionFavorite }}</td>
            </tr>
            <tr>
                <th>IsSectionfluid</th>
                <td>{{ section.isSectionfluid ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>BaliseClass</th>
                <td>{{ section.baliseClass }}</td>
            </tr>
            <tr>
                <th>BaliseId</th>
                <td>{{ section.baliseId }}</td>
            </tr>
            <tr>
                <th>BaliseName</th>
                <td>{{ section.baliseName }}</td>
            </tr>
            <tr>
                <th>BaliseStyle</th>
                <td>{{ section.baliseStyle }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ section.createdAt ? section.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ section.updatedAt ? section.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_webapp_section_index') }}">back to list</a>

    <a href="{{ path('app_webapp_section_edit', {'id': section.id}) }}">edit</a>

    {{ include('webapp/section/_delete_form.html.twig') }}
{% endblock %}
