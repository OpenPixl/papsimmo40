    <div class="page">
        <div id="header" class="container">
            <div>
                <img class="img-adapt" src="{{ absolute_url(asset('images/png/LogoPAPSimmo.png'))}}" alt="{{ application.nameSite }}">
            </div>
            <div>
                <h1 class="title-h1">FICHE CLIENT</h1>
            </div>
            <div>
                <p>MANDAT N° : {{ property.refMandat }}</p>
                <p>Dossier édité le : {{ 'now'|date('Y-m-d') }}</p>
            </div>
        </div>
        <div id="Title">
            <h2 class="title-h2">INFO - {{ property.name }}</h2>
        </div>
        <div id="techniques">
            <div id="Subtitle">
                <h3 class="title-h3">ESTIMATION DU COUT ANNUEL ENERGETIQUE DU BIEN</h3>
                <p><span class="subtitle">Estimation énergie basse : </span>{% if property.dpeEstimateEnergyDown is not
                        empty %}{{ property.dpeEstimateEnergyDown }}{% else %}non communiqué{% endif %}</p>
                <p><span class="subtitle">Estimation énergie élevée : </span>{% if property.dpeEstimateEnergyUp is
                        null%}{{property.dpeEstimateEnergyUp}}{% else %}non communiqué{% endif %}</p>
                <p><span class="subtitle">Année de référence : </span></p>
            </div>
            <div>
                <h3 class="title-h3">Piéces</h3>
                <p><span class="subtitle">Terrasse : </span>{% if property.terrace is not empty%}{{property.terrace}}{%
                    else %}non communiqué{% endif %}</p>
                <p><span class="subtitle">Salle d'eau : </span>{% if property.washroom is not
                        empty%}{{property.washroom}}{% else %}non communiqué{% endif %}</p>
                <p><span class="subtitle">Salle de bain : </span>{% if property.bathroom is not
                        empty%}{{property.bathroom}}{% else %}non communiqué{% endif %}</p>
                <p><span class="subtitle">WC : </span>{% if property.wc is not empty%}{{property.wc}}{% else %}non
                    communiqué{% endif %}</p>
                <p><span class="subtitle">Balcon : </span>{% if property.balcony is not empty%}{{property.balcony}}{%
                    else %}non communiqué{% endif %}</p>
            </div>
            <div>
                <h3 class="title-h3">Equipements</h3>
                <p><span class="subtitle">Meublé : </span>{% if property.dpeEstimateEnergyUp is not
                        empty%}{{property.dpeEstimateEnergyUp}}{% else %}non communiqué{% endif %}</p>
                <p><span class="subtitle">Equipement du bien : </span>{% if property.dpeEstimateEnergyUp is not
                        empty%}{{property.dpeEstimateEnergyUp}}{% else %}non communiqué{% endif %}</p>
                <p><span class="subtitle">Typologie du bien : </span>{% if property.propertyTypology is not
                        empty%}{{property.propertyTypology}}{% else %}non communiqué{% endif %}</p>
                <p><span class="subtitle">Etage : </span>{% if property.dpeEstimateEnergyUp is not
                        empty%}{{property.dpeEstimateEnergyUp}}{% else %}non communiqué{% endif %}</p>
                <p><span class="subtitle">Autres options du bien : </span>{% if property.dpeEstimateEnergyUp is not
                        empty%}{{property.dpeEstimateEnergyUp}}{% else %}non communiqué{% endif %}</p>
            </div>
        </div>
    </div>
    </body>
</html>